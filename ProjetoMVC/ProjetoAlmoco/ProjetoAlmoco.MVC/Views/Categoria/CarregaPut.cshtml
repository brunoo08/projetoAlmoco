@model ProjetoAlmoco.Application.Categoria.Model.CategoriaModel

@{
    ViewBag.Title = "Atualizar Cardápio";
}

<!-- modal editar categoria-->
    <div id="modal-editar-categoria" class="modal">
        <div class="modal-content">

            <div class="topo">
                <span class="titulo-modal">Editar Categoria</span> <br>
                <button class="close-button" onclick="fechaModal('modal-editar-categoria')">X</button>
            </div>

            <div class="formulario">

                <div class="nome-categoria">
                    <span>Nome da categoria:</span>
                    <input type="text" class="input" id="Nom_Nome_Put" value=@Model.Nom_Nome>
                </div>

                <div class="bottom">
                    <button class="botao" onclick="RotasCategoria.Put(@Model.Num_IdCategoria)">Salvar</button>
                </div>

            </div>
        </div>
    </div>